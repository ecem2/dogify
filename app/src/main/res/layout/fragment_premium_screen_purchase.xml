<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".subscription.PremiumScreenPurchaseFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/premium_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Rate Your Dog"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_bold"
        android:textSize="46sp"
        android:layout_marginTop="30dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/premium_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/premium_txt"
        android:src="@drawable/purchase"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_purchase_premium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premium_photo"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="30dp"
        android:text="Purchase"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/tt_firs_neue_trial_bold"
        android:textSize="24sp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        android:text="Subscription is auto-renewable. You can cancel
your subscription at any time"
        android:textSize="14sp"
        android:fontFamily="@font/tt_firs_neue_trial_regular"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>