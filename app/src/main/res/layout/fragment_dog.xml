<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DogFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/dog"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:padding="20dp"
    android:layout_marginTop="40dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintDimensionRatio="H,1:1"
    android:src="@drawable/dog"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_dog_continue"
        android:text="Sesi tekrarla"
        android:textAllCaps="false"
        android:fontFamily="@font/tt_firs_neue_trial_demibold"
        android:textColor="@color/white"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>